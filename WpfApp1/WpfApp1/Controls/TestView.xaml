<UserControl x:Class="WpfApp1.Controls.TestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             xmlns:VM="clr-namespace:WpfApp1.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 d:DataContext="{d:DesignInstance Type=VM:TestViewModel}">
	
    <Grid>
		<StackPanel>
			<TextBlock Text="{Binding Title}"/>
			<Button Content="Add New Activity" Command="{Binding GoToTestActivityCommand}"/>
		</StackPanel>
	</Grid>
</UserControl>
