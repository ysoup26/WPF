<UserControl x:Class="WpfControlLibrary1.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Button x:Name="button" 
				Content="{Binding MyProperty2}" 
				Command="{Binding DisplayMessageCommand}" CommandParameter="helele command" 
				Margin="38,25,0,0" Width="241" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FFCA2E2E" 
				FontFamily="Global Monospace" Background="#FFD7D831"></Button>

		<Button x:Name="button2" 
				Content="{Binding MyProperty2}" 
				Command="{Binding DisplayMessage2Command}" CommandParameter="helele command2" 
				Margin="77,155,0,0" Width="250" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FFCA2E2E" 
				FontFamily="Global Monospace" Background="#FF7DE6C2"></Button>

		<Button x:Name="button3" 
				Content="{Binding MyProperty3}" 
				Command="{Binding DisplayMessage3Command}" CommandParameter="helele command3" 
				Margin="202,299,0,0" Width="237" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FFCA2E2E" 
				FontFamily="Global Monospace" Background="#FF2B7FBF"/>
	</Grid>
</UserControl>
